<h1 class="text-center"><%= @chatroom.name %></h1>
<div class="container">
<div class="row">
	<div id="body" class="well col-md-6 col-md-offset-3" style="list-style: none;overflow:auto;height:500px;"></div>
</div>

<div class="row">
	<input id="text" onsubmit="return enterText(event)" class="col-md-3 col-md-offset-3 form-control" style="width:540px;"></input>
	<button id="submit" onclick="submitText()" class="btn btn-primary btn-sm">Post</button>
	<script type="text/javascript" src="chat.js"></script>
</div>
</div>
<%= link_to "Back", :back, class: "btn btn-warning" %>