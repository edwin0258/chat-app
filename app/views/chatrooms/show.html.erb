<h1 class="text-center"><%= @chatroom.name %></h1>
<div class="container">
	<div class="row">
		<div id="posts" class="well col-md-6 col-md-offset-3" style="list-style: none;overflow:auto;height:500px;"><%= render @chatroom.posts %></div>
	</div>

    <div class="col-md-2 col-md-offset-4">
    <%= link_to new_post_path, remote: true do %>
      <button class="btn btn-default">New</button>
    <% end %></div>
	<div class="row">
	  <div class="col-md-6 col-md-offset-2" id="post-form" ></div>
	</div>
</div>
<script type="text/javascript" src="chat.js"></script>
<%= link_to "Back", :back, class: "btn btn-warning" %>